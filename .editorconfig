root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
# Might want to set:
# trim_trailing_whitespace = true
# max_line_length = 79

[*.{html,css}]
indent_style = space
indent_size = 4

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2

# Examples:
# [filename] or
# [*.{ext1,ext2}] or
# [folder/glob]
# indent_style = space | tab
# indent_size = 4
